@model simpproj.Models.Ad

<article>
    <h1><a href="@Url.RouteUrl("Ad", new { Model.Id, Model.Slug })">@Model.Title</a></h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    <div class="table table-responsive">
        <table class="table-striped">
            <thead>
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Colour</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Year of Registration</th>
                    <th>Location</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.Make</td>
                    <td>@Model.Model</td>
                    <td>@Model.Type</td>
                    <td>@Model.Colour</td>
                    <td>@Model.Image</td>
                    <td>@Model.Price</td>
                    <td>@Model.RegistrationYear</td>
                    <td>@Model.Location</td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a href="@Url.Action("edit", new { Model.Id })" class="btn btn-xs btn-primary">
                                <i class="glyphicon glyphicon-edit"></i> edit
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <footer>
        <ul class="pull-right list-unstyled tags">
            @foreach (var tag in Model.Categories)
            {
                <li>
                    <a class="badge" href="@Url.RouteUrl("Tag", new { tag.Id, tag.Slug})">@tag.Name</a>
                </li>
            }
        </ul>
        Posted: @((int)(DateTime.UtcNow - Model.CreatedAt).TotalDays) Days ago
    </footer>
</article>

