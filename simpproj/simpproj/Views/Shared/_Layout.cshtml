<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ads</title>
    @Styles.Render("~/styles/site")
    @Scripts.Render("~/bundles/modernizer")
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body data-spy="scroll" data-target="nav">
    <header id="header-1" class="soft-scroll header-1">
        <!-- Navbar -->
        <nav class="main-nav navbar-fixed-top headroom headroom--pinned">
            <div class="container">
                <!-- Brand and toggle -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="navbrand" class="navbar-brand" href="@Url.RouteUrl("home")">CarAds</a>
                </div>
                <!-- Navigation -->
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <!-- Items -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="#">Hey @User.Identity.Name</a></li>
                                <li><a href="@Url.RouteUrl("logout")">Logout</a></li>

                            if (User.IsInRole("admin"))
                            {
                                <li><a href="@Url.Action("index", "Posts", new { area="admin"})">Go to Admin Area</a></li>
                            }
                        }

                        else
                        {
                            <li><a href="@Url.RouteUrl("login")">Login</a></li>
                        }
                    </ul>
                    <!--//nav-->
                </div>
                <!--// End Navigation -->
            </div>
            <!--// End Container -->
        </nav>
        <!--// End Navbar -->
    </header>

    <div id="site-content">
        @RenderBody()
    </div>

    <div class="copyright-bar-2 bg-black">
        <div class="container text-center">
            <p>© COPYRIGHT 2016 - Ads</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts")
</body>
</html>